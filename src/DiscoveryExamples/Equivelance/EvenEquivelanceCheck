
node T_node_orig(signal: bool) returns (even: bool);

let
	even = true -> if(signal) then
	                    not pre even
	               else
	                    pre even;
tel;

node T_node_repaired(signal : bool) returns ( even : bool);

let
  even = (true -> (if signal then (not (pre even)) else (pre even)));

tel;


-- this is where we are doing equivalence.

node main(signal : bool) returns (ok:bool);
var
    e1, e2:bool;

let
    e1 = T_node_orig(signal);
    e2 = T_node_repaired(signal);
    ok = (e1=e2);

    --%PROPERTY ok;
tel;